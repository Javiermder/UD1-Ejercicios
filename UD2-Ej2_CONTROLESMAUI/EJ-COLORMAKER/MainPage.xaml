<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EJ_COLORMAKER.MainPage" BackgroundColor="Green">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center"
            >


            <Frame Background="White">
                <VerticalStackLayout
                Spacing="10">

                    <Label Text="Color Maker" TextColor="Black"
                        HorizontalOptions="Center" />

                    <Label Text="Red" TextColor="Black"
                        HorizontalOptions="Center" />
                    <Slider x:Name="red" WidthRequest="100"
                        HorizontalOptions="Center" ValueChanged="red_ValueChanged"/>

                    <Label Text="Green" TextColor="Black"
                        HorizontalOptions="Center" />
                    <Slider x:Name="green" WidthRequest="100"
                        HorizontalOptions="Center" ValueChanged="green_ValueChanged"/>

                    <Label Text="Blue" TextColor="Black"
                        HorizontalOptions="Center" />
                    <Slider x:Name="blue" WidthRequest="100"
                        HorizontalOptions="Center" ValueChanged="blue_ValueChanged" />

                    <Label Text="Hexadecimal: "/>

                    <Button Text="Generar color aleatorio" BackgroundColor="Green"
                            HeightRequest="100" WidthRequest="100"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
