<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD2_BIDING_INOTIFYPROPERTYCHANGED.MainPage">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <HorizontalStackLayout Grid.Row="0" Margin="10" BackgroundColor="Beige">

                <Label Text="Nombre:" VerticalOptions="Center"></Label>
                <Entry Text="{Binding Name }" VerticalOptions="Center" WidthRequest="150"/>
                
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="1" Margin="10" BackgroundColor="Beige">

                <Label Text="Apellidos:" VerticalOptions="Center"></Label>
                <Entry Text="{Binding LastName}" VerticalOptions="Center" WidthRequest="150"/>

            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="2" Margin="10" BackgroundColor="AliceBlue">

                <Label Text="Nombre Completo:" VerticalOptions="Center"></Label>
                <Entry Text="{Binding FullName}" VerticalOptions="Center" WidthRequest="175"/>

            </HorizontalStackLayout>

        </Grid>
    </ScrollView>

</ContentPage>
