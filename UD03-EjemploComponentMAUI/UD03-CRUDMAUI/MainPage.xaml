<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:miComponente="clr-namespace:UD3LibCrudMaui;assembly=UD3LibCrudMaui"
             x:Class="UD03_CRUDMAUI.MainPage"
             Title="UD3_CRUDMAUI">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                
                x:Name="ImgBot"/>

            <Label
                Text="Ejemplo componente MAUI"
                x:Name="lbTitle"
                Style="{StaticResource Headline}"
               />

            <miComponente:ViewLibCrud x:Name="ButtonBox"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
