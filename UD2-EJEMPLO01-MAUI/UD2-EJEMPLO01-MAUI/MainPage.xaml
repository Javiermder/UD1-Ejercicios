<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UD2_EJEMPLO01_MAUI.MainPage">
            

    <VerticalStackLayout BackgroundColor="Beige" Padding="20">
        
        <Label Text="Usuario" TextColor="Green" FontSize="20"></Label>
        <Entry x:Name="txtUser" Placeholder="Introduce un usuario" PlaceholderColor="Red"></Entry>
        <Label Text="Contraseña" TextColor="Green" FontSize="20"></Label>
        <Entry x:Name="txtPass" Placeholder="Introduce una contraseña" PlaceholderColor="Red"></Entry>
        <Button Text="Enviar formulario:" WidthRequest="150"
                Margin="10"
                x:Name="btnSend" Clicked="btnSend_Clicked"></Button>
    
    </VerticalStackLayout>


</ContentPage>
