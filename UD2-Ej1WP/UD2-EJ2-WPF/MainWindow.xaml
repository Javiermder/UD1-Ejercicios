<Window x:Class="UD2_EJ2_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UD2_EJ2_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <WrapPanel x:Name="panel">
        <Label Content="Herramienta para cambiar el panel de color:" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22"/>
        <ComboBox x:Name="cbColor" HorizontalAlignment="Center" VerticalAlignment="Center" Width="171" Height="39" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Rojo"/>
            <ComboBoxItem Content="Verde"/>
            <ComboBoxItem Content="Azul"/>
        </ComboBox>
    </WrapPanel>
</Window>
